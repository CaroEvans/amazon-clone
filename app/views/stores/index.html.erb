<h1>Stores</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.full_address %></td>
        <td><%= link_to 'Show', store %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
